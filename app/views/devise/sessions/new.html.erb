<h2>Entrar</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col">
      <%= f.label :email, class: "mdl-textfield__label"%>
      <%= f.email_field :email, autofocus: true, class: "mdl-textfield__input"%>
    </div>
  </div>

  <div class="field">
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col">
      <%= f.label :password, "ContraseÃ±a", class: "mdl-textfield__label" %>
      <%= f.password_field :password, autocomplete: "off", class: "mdl-textfield__input" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field margin_field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Recuerdame" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
