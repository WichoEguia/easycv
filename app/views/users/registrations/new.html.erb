<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="field mdl-grid">
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col">
      <%= f.label :email,id: "email", class: "mdl-textfield__label" %>
      <%= f.email_field :email, autofocus: true, class: "mdl-textfield__input"%>
    </div>
  </div>

  <div class="field mdl-grid">
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
      <%= f.label :name, "Nombre", id: "nombre", class: "mdl-textfield__label" %>
      <%= f.text_field :name, class: "mdl-textfield__input" %>
    </div>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
      <%= f.label :lastname, "Apellido", id: "apellido", class: "mdl-textfield__label" %>
      <%= f.text_field :lastname, class: "mdl-textfield__input" %>
    </div>
  </div>

  <div class="field mdl-grid">
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col">
      <% if @minimum_password_length %>
        <%= f.label :password, "Contrase単a (#{@minimum_password_length} caracteres minimo)", class: "mdl-textfield__label" %>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", class: "mdl-textfield__input", id: "contrase単a" %>
    </div>
  </div>

  <div class="field mdl-grid">
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col">
      <%= f.label :password_confirmation, "Confirmar contrase単a", class: "mdl-textfield__label" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "mdl-textfield__input", id: "confirma_contrase単a" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Registrarse", onclick: "return validate_user_form_and_submit()" %>
  </div>
<% end %>

<%= render "users/shared/links" %>

<style media="screen">
  .field{
    padding: 0;
  }
  .field div{
    margin-top: 0;
    margin-bottom: 0;
  }
</style>
